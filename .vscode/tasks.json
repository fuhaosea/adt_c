{

    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cdebug",//任务的名字，就是刚才在命令面板中选择的时候所看到的，可以自己设置
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true//表示快捷键Ctrl+Shift+B可以运行该任务
            }
        }
    ]
}